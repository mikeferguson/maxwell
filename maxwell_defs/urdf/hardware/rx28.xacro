<?xml version="1.0"?>
<robot>

  <macro name="dynamixel_rx28_pan" params="parent name color *origin" >
    <joint name="${name}_joint" type="fixed">
      <insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>

    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz=" 0 0 0 " rpy="0 0 -1.57" />
        <geometry>
          <mesh filename="package://maxwell_defs/meshes/rx28.stl" scale="1 1 1"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="${-(0.0506-0.024)/2} 0.0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.0506 0.045 0.0356"/>
        </geometry>
      </collision>
    </link>
  </macro>

  <macro name="dynamixel_rx28_tilt" params="parent name color *origin" >
    <joint name="${name}_joint" type="fixed">
      <insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>

    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz=" 0 0 0 " rpy="1.57 1.57 0" />
        <geometry>
          <mesh filename="package://maxwell_defs/meshes/rx28.stl" scale="1 1 1"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="${-(0.0506-0.024)/2} 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.0506 0.045 0.0356"/>
        </geometry>
      </collision>
    </link>
  </macro>

  <macro name="rx28_side_revolute" params="parent name color llimit ulimit vlimit *origin">
    <joint name="${name}_joint" type="revolute">
      <insert_block name="origin" />
       <axis xyz="1 0 0"/>
      <limit effort="30" velocity="${vlimit}" lower="${llimit}" upper="${ulimit}" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>

    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz=" 0 0 0 " rpy="-1.57 -1.57 0" />
        <geometry>
          <mesh filename="package://maxwell_defs/meshes/rx28-side-bracket.stl" scale="1 1 1"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="0.005 0 0.005" rpy="0 0 0" />
        <geometry>
          <box size="0.010 0.037 0.037"/>
        </geometry>
      </collision>
    </link>
  </macro>

  <macro name="rx28_side_fixed" params="parent name color *origin">
    <joint name="${name}_joint" type="fixed">
      <insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>

    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz=" 0 0 0 " rpy="1.57 1.57 0" />
        <geometry>
          <mesh filename="package://maxwell_defs/meshes/rx28-side-bracket.stl" scale="1 1 1"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="0.005 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.010 0.035 0.030"/>
        </geometry>
      </collision>
    </link>
  </macro>

  <macro name="rx28_hinge" params="parent name color llimit ulimit vlimit *origin">
    <joint name="${name}_joint" type="revolute">
      <insert_block name="origin" />
       <axis xyz="0 1 0"/>
      <limit effort="30" velocity="${vlimit}" lower="${llimit}" upper="${ulimit}" />
      <parent link="${parent}"/>
      <child link="${name}_link" />
    </joint>

    <link name="${name}_link">
      <inertial>
        <mass value="0.00001" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 -1.57" />
        <geometry>
          <mesh filename="package://maxwell_defs/meshes/rx28-hinge-bracket.stl" scale="1 1 1"/>
        </geometry>
        <material name="${color}"/>
      </visual>
      <collision>
        <origin xyz="${0.030/2} 0.0 0.0" rpy="0 0 0" />
        <geometry>
          <box size="0.030 0.045 0.031"/>
        </geometry>
      </collision>
    </link>
  </macro>

</robot>
